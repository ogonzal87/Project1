<!-- SEARCH BAR -->
<section>
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <form class="navbar-form" role="search">
        <div class="form-group">
          <input type="text" name="search" class="form-control" value="<%= @search %>"placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default">Let's get Zipping</button>
      </form>
    </div>
    <div class="col-md-4"></div>
  </div>
</section>

<!-- LIST OF ITEMS -->

<section class="container items">
  <div class="list-group">
    <div class="row">
    <% @drinks.each do |item| %>
      <div class="col-md-4">
        <a href="drinksall/<%= item.id %>" class="list-group-item">
          <h3><%= item.name %></h3>
          <article class="row">
            <div class="col-xs-5 image">
              <img class="middle" width=300px src="/images/<%= item.image_file %>"/>
            </div>
            
          </article>
        </a>
      </div>
    <% end %>
    </div>
  </div>
</section>

